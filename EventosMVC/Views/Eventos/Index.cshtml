@model IEnumerable<EventosMVC.Models.EventosViewModel>

@{
    ViewData["Title"] = "Eventos";
}

<h2 class="mb-4">Lista de Eventos</h2>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Imagem</th>
            <th>Título</th>
            <th>Cidade</th>
            <th>Data</th>
            <th>Local</th>
            <th>Vagas</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evento in Model)
        {
            <tr>
                <td class="text-center">
                    @if (!string.IsNullOrEmpty(evento.ImagemUrl))
                    {
                        <img src="@evento.ImagemUrl" alt="@evento.Titulo"
                             class="img-thumbnail"
                             style="max-width: 100px; max-height: 80px;" />
                    }
                    else
                    {
                        <span class="text-muted">Sem imagem</span>
                    }
                </td>
                <td>@evento.Titulo</td>
                <td>@evento.Cidade</td>
                <td>@evento.Data.ToString("dd/MM/yyyy")</td>
                <td>@evento.Local</td>
                <td>@evento.Vagas</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@evento.Id" class="btn btn-info btn-sm">
                        <i class="fa fa-eye"></i> Detalhes
                    </a>
                    <a asp-action="Edit" asp-route-id="@evento.Id" class="btn btn-warning btn-sm">
                        <i class="fa fa-edit"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@evento.Id" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i> Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">
    <i class="fa fa-plus"></i> Criar Novo Evento
</a>
