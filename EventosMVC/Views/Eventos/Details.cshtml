@model EventosMVC.Models.EventosViewModel

@{
    ViewData["Title"] = "Detalhes do Evento";
}

<div class="row justify-content-center py-5">
    <div class="col-md-8">
        <partial name="_AlertMessages" /> <!-- Mensagens de sucesso ou erro -->

        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h4>@Model.Titulo</h4>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ImagemUrl))
                {
                    <div class="text-center mb-3">
                        <img src="@Model.ImagemUrl" alt="@Model.Titulo" class="img-fluid rounded" style="max-height:300px;" />
                    </div>
                }

                <p><strong>Data:</strong> @Model.Data.ToString("dd/MM/yyyy")</p>
                <p><strong>Local:</strong> @Model.Local</p>
                <p><strong>Cidade:</strong> @Model.Cidade</p>
                <p><strong>Entrada:</strong> @Model.Entrada</p>
                <p><strong>Vagas:</strong> @Model.Vagas</p>
                <p><strong>Descrição:</strong> @Model.Descricao</p>
            </div>
            <div class="card-footer d-flex justify-content-between">
                @* Botão Editar apenas para Admin ou SuperAdmin *@
                @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fa fa-edit me-1"></i> Editar
                    </a>
                }

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left me-1"></i> Voltar
                </a>
            </div>
        </div>
    </div>
</div>
